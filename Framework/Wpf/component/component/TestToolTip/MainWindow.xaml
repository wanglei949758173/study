<Window x:Class="TestToolTip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestToolTip"
        mc:Ignorable="d"
        Title="测试ToolTip" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="50">
            <Button Height="30" Margin="30"  Content="按钮">
                <Button.ToolTip>
                    <ToolTip Background="AliceBlue">
                        <StackPanel>
                            <TextBlock>THIS IS A Button</TextBlock>
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
            </Button>
        </StackPanel>
    </Grid>
</Window>
